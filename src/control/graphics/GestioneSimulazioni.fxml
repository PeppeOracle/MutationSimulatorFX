<AnchorPane minHeight="768.0" minWidth="1080.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.ControllerGestioneSimulazioni" fx:id="gestioneAP">
<VBox minHeight="768" prefWidth="1080" minWidth="1080">
    <children>
        <MenuBar
                prefHeight="30.0" prefWidth="Infinity" minWidth="1080">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Nuova Simulazione" fx:id="NewSimulationMenuButton" onAction="#newSimulation"/>
                        <MenuItem mnemonicParsing="false" text="Simulazioni Recenti" fx:id="RecentSimulationsMenuButton" onAction="#recentSimulations"/>
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Effettua Singola Mutazione" fx:id="SingleMutationMenuButton" onAction="#singleMutation"/>
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Nuovo Frammento di DNA" />
                        <MenuItem mnemonicParsing="false" text="Frammenti di DNA Recenti" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Opzioni" />
                        <MenuItem mnemonicParsing="false" text="Esci" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Modifica">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Undo" />
                        <MenuItem mnemonicParsing="false" text="Redo" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Cut" />
                        <MenuItem mnemonicParsing="false" text="Copy" />
                        <MenuItem mnemonicParsing="false" text="Paste" />
                        <MenuItem mnemonicParsing="false" text="Delete" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Select All" />
                        <MenuItem mnemonicParsing="false" text="Unselect All" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Aiuto">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About MyHelloApp" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
            <children>
                <BorderPane layoutX="220.0" layoutY="34.0" prefHeight="375.0" prefWidth="640.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <top>
                        <GridPane gridLinesVisible="true" prefWidth="300.0" BorderPane.alignment="CENTER">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="20.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <BorderPane.margin>
                                <Insets bottom="5.0" right="13.0" />
                            </BorderPane.margin>
                            <children>
                                <Label text="Nome" GridPane.halignment="CENTER" GridPane.columnIndex="0" >
                                    <font>
                                        <Font name="Gadugi" size="16.0" />
                                    </font>
                                </Label>
                                                <!--<Polygon fill="#dddddd" points="70.0, -25.0, 77.5, -18.0, 63.0, -18.0" stroke="#575757" strokeType="INSIDE" GridPane.columnIndex="1" GridPane.halignment="LEFT">
                                                    <GridPane.margin>
                                                        <Insets left="5.0" />
                                                    </GridPane.margin>
                                                </Polygon>-->
                                <Label text="Data" GridPane.columnIndex="1" GridPane.halignment="CENTER">
                                    <font>
                                        <Font name="Gadugi" size="16.0" />
                                    </font>
                                </Label>
                                <Label text="Descrizione" GridPane.columnIndex="2" GridPane.halignment="CENTER">
                                    <font>
                                        <Font name="Gadugi" size="16.0" />
                                    </font>
                                </Label>
                                <Label text="Opzioni" GridPane.columnIndex="3" GridPane.halignment="CENTER">
                                    <font>
                                        <Font name="Gadugi" size="16.0" />
                                    </font>
                                </Label>
                            </children>
                        </GridPane>
                    </top>
               <center>
                  <ScrollPane focusTraversable="false" BorderPane.alignment="CENTER">
                     <content>
                        <VBox fx:id="gridBox" onScrollFinished="#resizeGrid" prefHeight="500.0" prefWidth="1025.0">
                           <children>
                              <GridPane fx:id="simulationsGrid" gridLinesVisible="true">
                                <columnConstraints>
                                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="20.0" />
                                </columnConstraints>
                                <rowConstraints>
                                </rowConstraints>
                              </GridPane>
                               <BorderPane>
                                   <center>
                                       <Button fx:id="more" minHeight="30.0" minWidth="100.0" onAction="#resizeGrid" text="More...">
                                           <BorderPane.margin>
                                               <Insets top="10" bottom="10"/>
                                           </BorderPane.margin>
                                       </Button>
                                   </center>
                               </BorderPane>
                              </children>
                        </VBox>
                     </content>
                  </ScrollPane>
               </center>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
                </BorderPane>
            </children>
        </AnchorPane>
    </children>
</VBox>
